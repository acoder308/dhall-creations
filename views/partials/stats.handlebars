<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title" style="color: red">
            Stats
        </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-2 text-right">Images:</div>
            <div class="col-md-10 text-right">{{ sidebar.stats.images }}</div>
        </div>
        <div class="row">
            <div class="col-md-2 text-right">Comments:</div>
            <div class="col-md-10 text-right">{{ sidebar.stats.comments }}</div>
        </div>
        <div class="row">
            <div class="col-md-2 text-right">Views:</div>
            <div class="col-md-10 text-right">{{ sidebar.stats.views }}</div>
        </div>
        <div class="row">
            <div class="col-md-2 text-right">Likes:</div>
            <div class="col-md-10 text-right">{{ sidebar.stats.likes }}</div>
        </div>
    </div>
</div>
